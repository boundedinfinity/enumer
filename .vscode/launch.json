    "version": "0.2.0",
    "configurations": [
        {
            "name": "cmd/main (with formatting)", 
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/cmd",
            "program": "${workspaceFolder}/cmd/enumer/main.go",
            "args": [
                "-path=${workspaceFolder}/enum_internal/string/string.enum.go",
            ],
        },
        {
            "name": "cmd/main (without formatting)", 
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/cmd",
            "program": "${workspaceFolder}/cmd/enumer/main.go",
            "args": [
                "-path=${workspaceFolder}/enum_internal/string/string.enum.go",
                "--skip-format"
            ],
        }
    ]
}