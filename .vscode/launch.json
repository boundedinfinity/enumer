    "version": "0.2.0",
    "configurations": [
        {
            "name": "cmd/main caser (with formatting)", 
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/enum_internal/caser",
            "program": "${workspaceFolder}/cmd/enumer/main.go",
            "args": [
                "-config=./case-type.enum.yaml",
            ],
        },
        {
            "name": "cmd/main string (with formatting)", 
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/enum_internal/string",
            "program": "${workspaceFolder}/cmd/enumer/main.go",
            "args": [
                "-config=./my-string.enum.yaml",
            ],
        },
        {
            "name": "cmd/main string (without formatting)", 
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/enum_internal/string",
            "program": "${workspaceFolder}/cmd/enumer/main.go",
            "args": [
                "-config=./my-string.enum.yaml",
                "--skip-format"
            ],
        },
        {
            "name": "cmd/main (vscode)", 
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/cmd/enumer",
            "program": "${workspaceFolder}/cmd/enumer/main.go",
            "args": [
                "-vscode=${workspaceFolder}/enum_internal/vscode"
            ],
        }
    ]
}
